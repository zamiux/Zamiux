@model Zamiux.Web.ViewModels.Contact.SendContactMsgViewModel
@{
    ViewData["Title"] = "Home";
}
 <!-- =====================================
    ==== Start Header -->
    @await Component.InvokeAsync("Slider")    
    <!-- End Header ====
    ======================================= -->
    <!-- =====================================
    ==== Start Hero -->
    @await Component.InvokeAsync("Hero")
    <!-- End Hero ====
    ======================================= -->
    <!-- =====================================
    ==== Start Section-box -->
    @await Component.InvokeAsync("Skill")
    <!-- End Section-box ====
    ======================================= -->
    <!-- =====================================
    ==== Start Services -->
    @await Component.InvokeAsync("ServicesUs") 
    <!-- End Services ====
    ======================================= -->
    <!-- =====================================
    ==== Start Numbers -->
    @*@await Component.InvokeAsync("Numbers")*@
    <!-- End Numbers ====
    ======================================= -->
    <!-- =====================================
    ==== Start Works -->
    @await Component.InvokeAsync("Works")
    <!-- End Works ====
    ======================================= -->
    <!-- =====================================
    ==== Start Testimonials -->
    @*@await Component.InvokeAsync("Testimonials")*@
    <!-- End Testimonials ====
    ======================================= -->
    <!-- =====================================
    ==== Start Blog -->
    @await Component.InvokeAsync("BlogSlide")
    <!-- End Blog ====
    ======================================= -->
    <!-- =====================================
    ==== Start Contact-Info -->
    @await Component.InvokeAsync("ContactInfo")
    <!-- End Contact-Info ====
    ======================================= -->
    <!-- =====================================
    ==== Start Contact -->
    <section class="contact section-padding" data-scroll-index="7">
        <div class="container">
            <div class="row">
                <div class="section-head text-center col-sm-12">
                    <h4>در ارتباط باشید</h4>
                    <h6>برای تماس با ما راحت باشید</h6>
                </div>
                <div class="offset-lg-2 col-lg-8 offset-md-1 col-md-10">
                    <form class="form" method="post" asp-controller="Home" asp-action="Index" asp-area="">

                        <div class="messages"></div>

                        <div class="controls">

                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input id="form_name" type="text" asp-for="Fullname" placeholder="نام" required="required">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input id="form_email" type="email" asp-for="UserEmail" placeholder="ایمیل" required="required" dir="ltr">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input id="form_subject" type="text" asp-for="UserSubject" placeholder="موضوع">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <textarea id="form_message" asp-for="UserMessage" placeholder="پیام" rows="4"></textarea>
                                    </div>
                                </div>

                                <div class="col-md-12 text-center">
                                <input type="submit" style="text-align: center;" class="submit" value="ارسال پیام" />
                                </div>

                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </section>

    <!-- End Contact ====
    ======================================= -->