@model Zamiux.Web.ViewModels.User.EditUserIntroViewModel
@{
    ViewData["Title"] = "ویرایش تخصص من";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}

<div class="am-pagetitle">
    <h5 class="am-title">اطلاعات تخصصی > @ViewData["Title"]</h5>
</div><!-- am-pagetitle -->

<div class="am-mainpanel">
    <div class="am-pagebody">
        <div class="card pd-20 pd-sm-40">
            <h6 class="card-body-title">@ViewData["Title"]</h6>
            <p class="mg-b-20 mg-sm-b-30">دراین قسمت می توانید تخصص های خودتان را ویرایش گنید.</p>
            <div class="form-layout">
                <form method="post" asp-area="Admin" asp-controller="UserInfo" asp-action="Edit_User_Intro">
                    <div class="row mg-b-25">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label">عنوان: <span class="tx-danger" asp-validation-for="IntroTitle">*</span></label>
                                <input class="form-control" type="text" asp-for="IntroTitle">
                            </div>
                        </div><!-- col-12 -->
                        <div class="col-lg-12">
                            <label class="ckbox">
                                <input asp-for="isActive" type="checkbox"><span>این تخصص فعال باشد</span>
                            </label>


                        </div><!-- col-12 -->

                    </div><!-- row -->
                    <div class="form-layout-footer">
                        <input type="submit" value="بروز رسانی اطلاعات" class="btn btn-success mg-r-5" />
                        <a asp-area="Admin" asp-controller="UserInfo" asp-action="User_Intro" class="btn btn-secondary">انصراف</a>
                    </div><!-- form-layout-footer -->
                </form>
            </div>

        </div>
    </div><!-- am-pagebody -->
</div><!-- am-mainpanel -->
