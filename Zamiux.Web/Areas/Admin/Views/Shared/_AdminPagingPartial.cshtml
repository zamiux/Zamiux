@model Zamiux.Web.ViewModels.Common.BasePaging

<!-- In baraye Ersal Id Page Be URL -->
<input type="hidden" asp-for="Page"/>
<!-- In baraye Gereftan Items in Page -->
<input type="hidden" asp-for="Take" />

<div class="ht-80 bd d-flex align-items-center justify-content-center">
    <nav aria-label="Page منو ها">
        <ul class="pagination pagination-basic mg-b-0">
            @if (Model.Page > Model.StartPage)
            {
                <li class="page-item" onclick="paging(@(Model.Page - 1))">
                    <a class="page-link" href="#" aria-label="Previous">
                        <i class="fa fa-angle-left"></i>
                    </a>
                </li>
            }
            @*<li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>*@
            @for (int i = Model.StartPage; i < Model.EndPage; i++)
            {
                <li onclick="paging(@i)" class="page-item @(Model.Page == i ? "active" :"")"><a class="page-link" href="#">@i</a></li>
            }
            @if (Model.Page < Model.EndPage)
            {
                <li class="page-item" onclick="paging(@(Model.Page + 1))">
                    <a class="page-link" href="#" aria-label="Next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>

            
<script>
    function paging(pagenumber)
    {
        $('#Page').val(pagenumber);
        $('#filter-form').submit();

    }
</script>