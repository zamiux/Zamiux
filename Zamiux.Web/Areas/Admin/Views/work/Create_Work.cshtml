@using Zamiux.Web.Utils;
@model Zamiux.Web.ViewModels.Work.CreateWorkViewModel
@{
    ViewData["Title"] = "پروژه جدید";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}

<div class="am-pagetitle">
    <h5 class="am-title">پروژه ها > @ViewData["Title"]</h5>
</div><!-- am-pagetitle -->

<div class="am-mainpanel">
    <div class="am-pagebody">
        <div class="card pd-20 pd-sm-40">
            <h6 class="card-body-title">@ViewData["Title"]</h6>
            <p class="mg-b-20 mg-sm-b-30">دراین قسمت می توانید پروژه جدیدی را درج کنید.</p>
            <div class="form-layout">
                <form method="post" asp-area="Admin" asp-controller="work" asp-action="Create_Work" enctype="multipart/form-data">
                    <div class="row mg-b-25">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label">عنوان پروژه: <span class="tx-danger" asp-validation-for="WorkName">*</span></label>
                                <input class="form-control" type="text" asp-for="WorkName">
                            </div>
                        </div><!-- col-6 -->
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label">دسته بندی پروژه: <span class="tx-danger" asp-validation-for="CategoryName">*</span></label>
                                <input class="form-control" type="text" asp-for="CategoryName">
                            </div>
                        </div><!-- col-6 -->
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label">لینک: <span class="tx-danger" asp-validation-for="WorkExternalUrl">*</span></label>
                                <input class="form-control" type="text" asp-for="WorkExternalUrl">
                            </div>
                        </div><!-- col-12 -->
                        <div class="col-lg-6">
                            <label class="ckbox">
                                <input asp-for="IsActive" type="checkbox" checked=""><span>این پروژه فعال باشد</span>
                            </label>


                        </div><!-- col-12 -->
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label">تصویر لوگو </label>
                                <label class="custom-file">
                                    <input type="file" name="WorkImg" class="custom-file-input" ImageInput="1">
                                    <span class="custom-file-control custom-file-control-primary"></span>
                                </label>
                                <br />
                                <div class="card bd-0 wd-xs-300">
                                   <img class="card-img-top img-fluid" alt="Image" ImageFile="1">
                                </div>
                            </div>


                        </div><!-- col-12 -->

                    </div><!-- row -->
                    <div class="form-layout-footer">
                        <input type="submit" value="ثپت اطلاعات" class="btn btn-success mg-r-5" />
                        <a asp-area="Admin" asp-controller="work" asp-action="Index" class="btn btn-secondary">انصراف</a>
                    </div><!-- form-layout-footer -->
                </form>
            </div>

        </div>
    </div><!-- am-pagebody -->
</div>


